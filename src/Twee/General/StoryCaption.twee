		<<print '<div id="stats" class="'+window.sidebar.className(2)+'"><span id="sidebar_stats"></span></div>'>>\
		<<if $player.debugA>>\
			<<print '<div id="debug" class="'+window.sidebar.className(3)+'"><span id="sidebar_debug"></span></div>'>>\
		<<endif>>\
	</div>\
	\
	<<if $avatar.active>>\

	<<else>>\
		<<script>>document.getElementById("sidebarWindow").className="sidebar_window_short" <</script>>\
	<<endif>>\
	\
	<<updateClothes>>\
	<<updateStats>>\
	<<if $player.debugA>>\
		<<updateDebug>>\
	<<endif>>\
	\
<<endif>>\
